<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="resources" type="org.eclipse.che.ide.ui.loaders.LoaderResources"/>

    <ui:style>
        @eval expanderColor org.eclipse.che.ide.api.theme.Style.theme.loaderExpanderColor();
        @eval iconBackgroundColor org.eclipse.che.ide.api.theme.Style.theme.loaderIconBackgroundColor();
        @eval borderColor org.eclipse.che.ide.api.theme.Style.theme.getMainMenuSelectedBorderColor();
        @eval operationBoxColor org.eclipse.che.ide.api.theme.Style.theme.getToolbarBackgroundColor();

        .animate {
            transition: width 0.25s linear, height 0.25s linear;
            overflow: hidden;
        }

        .mainPanel {
            height: 100%;
            min-width: 336px;
            display: inline-block;
            margin: 0 !important;
        }

        .iconPanel {
            float: left;
            width: 40px;
            height: 100%;
            margin-top: auto;
            line-height: 24px;
            background-color: iconBackgroundColor;
        }

        .iconPanel > svg rect {
            fill: #4EABFF;
        }

        .iconPanel > svg {
            margin-top: -4px;
        }

        .statusPanel {
            margin-top: auto;
            display: inline;
            float: left;
            width: 65px;
            height: 100%;
            line-height: 24px;
            background-color: iconBackgroundColor;
        }

        .statusLabel {
            font-weight: bold;
            float: left;
            color: #4EABFF;
        }

        .expandedImage {
            float: right;
            transform: scaleY(0.5) rotate(90deg);
            margin-right: 5px;
            margin-top: 1px;
        }

        .expandedImage svg {
            width: 12px;
            height: 12px;
            fill: expanderColor;
        }

        .expandedImage:hover svg {
            fill: expanderColor;
        }

        .operations {
            position: fixed;
            min-width: 216px;
            text-align: left;
            background-color: operationBoxColor;
            padding-left: 15px;
            border: 1px solid borderColor;
            border-bottom-right-radius: 3px;
            border-bottom-left-radius: 3px;
        }

        .currentOperation {
            min-width: 215px;
            height: inherit;
            background-color: inherit;
            border: none;
        }

        .operationPanel {
            margin-top: auto;
            display: inline;
            float: left;
            width: 215px;
            height: 100%;
            line-height: 24px;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.mainPanel}">
        <g:FlowPanel ui:field="iconPanel" addStyleNames="{style.iconPanel}" debugId="loaderView-iconPanel"/>
        <g:FlowPanel addStyleNames="{style.statusPanel}">
            <g:Label ui:field="status" addStyleNames="{style.statusLabel}"/>
        </g:FlowPanel>
        <g:FlowPanel ui:field="operationPanel" addStyleNames="{style.operationPanel}">
            <g:FlowPanel ui:field="currentOperation" addStyleNames="{style.currentOperation}"/>
            <g:FlowPanel ui:field="operations" addStyleNames="{style.operations}"/>
        </g:FlowPanel>
        <g:FlowPanel ui:field="expandHolder" addStyleNames="{style.expandedImage}"/>
    </g:FlowPanel>
</ui:UiBinder>
